<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Spinner?>
<DialogPane fx:controller="sample.DriverController" xmlns:fx="http://javafx.com/fxml">
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Numer:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Spinner fx:id="number" GridPane.rowIndex="0" GridPane.columnIndex="1" min="1" max="50" editable="true"/>
            <Label text="ImiÄ™:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="firstName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Nazwisko:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="lastName" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Telefon:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Spinner fx:id="phone" GridPane.rowIndex="3" GridPane.columnIndex="1" min="0" max="999999999" editable="true"/>
        </GridPane>
    </content>
</DialogPane>

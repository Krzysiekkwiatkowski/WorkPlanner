<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <top>
        <VBox>
            <MenuBar>
                <Menu id="fx" text="Program">
                    <MenuItem text="Generuj grafik"/>
                    <SeparatorMenuItem/>
                    <MenuItem onAction="#exitAction" text="Wyjście"/>
                </Menu>
                <Menu text="Kierowca">
                    <MenuItem onAction="#showNewDriverDialog" text="Dodaj"/>
                </Menu>
                <Menu text="Żądania">
                    <MenuItem onAction="#showNewConditionDialog" text="Dodaj"/>
                    <SeparatorMenuItem/>
                    <MenuItem onAction="#clearConditions" text="Wyczyść"/>
                </Menu>
            </MenuBar>
        </VBox>
    </top>
    <left>
        <ListView fx:id="driversList" prefWidth="275"/>
    </left>
    <right>
        <ListView fx:id="conditionList"/>
    </right>
</BorderPane>
